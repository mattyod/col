{
  "name": "col",
  "description": "Tiny simple colour logger",
  "version": "0.1.0",
  "keywords": ["logging", "console", "colours"],
  "author": {
    "name": "Matthew O'Donoghue"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattyod/col"
  },
  "bugs": {
    "url": "https://github.com/mattyod/col/issues"
  },
  "main": "./col.js",
  "dependencies": {
    "what-app": "*"
  },
  "devDependencies": {
    "mocha": "1.13.x",
    "sinon": "1.7.x",
    "chai": "1.7.x",
    "sinon-chai": "2.4.x",
    "jshint": "2.4.4"
  },
  "scripts": {
    "hooks": "chmod +x hooks/*; cd .git/hooks && ln -sf ../../hooks/* .",
    "lint": "./node_modules/jshint/bin/jshint ./",
    "unit": "mocha --reporter spec test",
    "test": "npm run lint && npm run unit"
  }
}
